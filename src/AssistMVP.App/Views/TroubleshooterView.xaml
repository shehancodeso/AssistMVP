<UserControl x:Class="AssistMVP.Views.TroubleshooterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AssistMVP.ViewModels">
  <UserControl.DataContext><vm:TroubleshooterViewModel/></UserControl.DataContext>
  <Grid Margin="12">
    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal">
      <Button Content="{Binding CaptureButtonLabel}" Command="{Binding ToggleCaptureCommand}"/>
      <Button Content="Flash Overlay" Command="{Binding FlashOverlayCommand}"/>
      <Button Content="Analyze Now" Command="{Binding AnalyzeOnceCommand}"/>
      <TextBlock Text="{Binding Info}" Margin="12,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>
    <Grid Grid.Row="1" Margin="0,8,0,0">
      <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="3*"/></Grid.ColumnDefinitions>
      <Border BorderBrush="#ddd" BorderThickness="1" Margin="0,0,8,0"><ScrollViewer><Image Source="{Binding LastCapture}" Stretch="Uniform"/></ScrollViewer></Border>
      <Border Grid.Column="1" BorderBrush="#ddd" BorderThickness="1" Padding="8">
        <StackPanel>
          <TextBlock Text="Detected Issue" FontWeight="Bold"/>
          <TextBlock Text="{Binding Detection.Issue}" Margin="0,2,0,6"/>
          <TextBlock Text="Steps" FontWeight="Bold"/>
          <ItemsControl ItemsSource="{Binding Detection.Steps}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <StackPanel Margin="0,2">
                  <TextBlock Text="{Binding Instruction}"/>
                  <TextBlock Text="{Binding AnchorText}" Foreground="Gray" FontSize="12"/>
                </StackPanel>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </StackPanel>
      </Border>
    </Grid>
  </Grid>
</UserControl>
